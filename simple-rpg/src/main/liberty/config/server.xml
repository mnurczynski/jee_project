<?xml version="1.0" encoding="UTF-8"?>
<!--Open Liberty documentation does not use schema in examples.-->
<server description="Jakarta EE example server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>appSecurity-5.0</feature>
    </featureManager>


    <application type="war" location="simple-rpg-1.0-SNAPSHOT.war">
        <application-bnd>
            <security-role name="manager">
                <group name="manager" access-id="group:jdbc/SimpleRpgCharacters/manager"/>
                <run-as userid="admin"/>
            </security-role>
            <security-role name="building_administrator">
                <group name="building_administrator" access-id="group:jdbc/SimpleRpgCharacters/building_administrator"/>
            </security-role>
            <security-role name="read_only_user">
                <group name="read_only_user" access-id="group:jdbc/SimpleRpgCharacters/read_only_user"/>
            </security-role>
        </application-bnd>
    </application>


    <dataSource id="SimpleRpgCharactersDataSource" jndiName="jdbc/SimpleRpgCharacters">
        <jdbcDriver javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                    libraryRef="H2JDBCLib"/>
        <!--        <properties URL="jdbc:h2:/tmp/simple-rpg-characters;AUTO_SERVER=TRUE;TRACE_LEVEL_SYSTEM_OUT=2"/>-->
        <!--        <properties URL="jdbc:h2:/tmp/simple-rpg-characters;AUTO_SERVER=TRUE"/>-->
        <!--        <properties URL="jdbc:h2:mem:simple-rpg-characters;TRACE_LEVEL_SYSTEM_OUT=2"/>-->
        <properties URL="jdbc:h2:mem:simple-rpg-characters"/>

    </dataSource>

    <library id="H2JDBCLib">
        <fileset dir="${wlp.install.dir}/usr/servers/defaultServer/lib/global/" includes="h2-2.2.220.jar"/>
    </library>

</server>
